<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:background="@color/Gris_6"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNombreServicio"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:text="Nombre Servicio"
                android:textStyle="bold"
                android:textColor="@color/Negro_0"
                android:padding="5dp"
                android:textSize="18sp"/>
                <TextView
                    android:id="@+id/txtDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripcion jkjkjkjkjkjkjkkkjkkkkkkkkkkkkkkkkkkkkkk kllklklklklkllklklklklklklkllklkll"
                    android:padding="5dp"
                    android:textColor="@color/Negro_0"
                    android:layout_marginRight="5dp"
                    android:textSize="18sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/imagenServicio"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:background="@drawable/borde_log_pass">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/. "
                    android:padding="5dp"
                    android:textColor="@color/Rojo"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/txtPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Precio "
                    android:textColor="@color/Negro_0"
                    android:padding="5dp"
                    android:textSize="22sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <TextView
                    android:id="@+id/idServicioEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:visibility="invisible"/>
                <Button
                    android:id="@+id/btnElegir"
                    android:textColor="@color/Negro_0"
                    android:textStyle="bold"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:background="@mipmap/ic_elegir_asset"
                    android:layout_marginRight="5dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>