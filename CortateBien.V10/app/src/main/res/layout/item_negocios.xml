<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_negocios"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="370dp"
            android:layout_height="170dp"
            android:id="@+id/imagenNegocios"
            android:src="@drawable/ic_logo_5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/nombre"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:text="Nombre:"
                android:textColor="@color/Negro_0"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Horario: "
                    android:textStyle="bold"
                    android:textColor="@color/Gris_3"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/txtHorario"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="8:00 am - 10:00 pm: "
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:textColor="@color/Gris_3"
                    android:textSize="14sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Atencion:"
                    android:textStyle="bold"
                    android:textColor="@color/Gris_3"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/txtAtencion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Lunes a SÃ¡bado"
                    android:textStyle="bold"
                    android:textColor="@color/Gris_3"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/txtIdEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ID"
                    android:textStyle="bold"
                    android:textColor="@color/Gris_3"
                    android:visibility="invisible"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Contacto:"
                    android:textStyle="bold"
                    android:textColor="@color/Gris_3"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/txtContacto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="(01) 16435678"
                    android:textStyle="bold"
                    android:textColor="@color/Gris_3"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtDireccion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Direccion:"
                    android:textStyle="bold"
                    android:textColor="@color/Gris_3"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_ubicacion"
                    android:textSize="12dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txtDistrito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Distrito"
                    android:textColor="@color/Gris_1"
                    android:textStyle="bold|italic"
                    android:textSize="14sp"/>
            </LinearLayout>

                <Button
                    android:id="@+id/btnVerMas"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="Servicios"
                    android:textColor="@color/Rojo"
                    android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingTop="100dp">

    </LinearLayout>

</androidx.cardview.widget.CardView>